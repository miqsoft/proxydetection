config setup
    charondebug="ike 2, knl 2, cfg 2"

conn myvpn
    keyexchange=ikev2
    auto=add
    authby=secret
    left=%defaultroute
    right={{ relay }}
    ike=aes256-sha256-modp2048
    esp=aes256-sha256
    keyingtries=%forever
    dpdaction=restart
    dpddelay=30s
    dpdtimeout=120s
    leftauth=psk
    rightauth=psk
    type=transport
    leftprotoport=17/1701
    rightprotoport=17/1701
    leftfirewall=yes